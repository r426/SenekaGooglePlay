<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ryeslim.seneka.MainActivity">


    <TextView
        android:id="@+id/the_proverb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="32"
        android:breakStrategy="simple"
        android:fontFamily="@font/calibril"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        app:autoSizeMaxTextSize="48sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_page"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_chevron_left" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/next_page"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_chevron_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <View style="@style/EmptyView" />

        <TextView
            style="@style/SmallWordStyle"
            android:text="@string/like" />

        <TextView
            style="@style/SmallWordStyle"
            android:text="@string/bookmarks" />

        <TextView
            style="@style/SmallWordStyle"
            android:text="@string/share" />

        <View style="@style/EmptyView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_page"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_first_page" />

        <ImageView
            android:id="@+id/heart"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_favorite_border" />

        <ImageView
            android:id="@+id/show_bookmarks"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_dehaze" />

        <ImageView
            android:id="@+id/share"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_share" />

        <ImageView
            android:id="@+id/last_page"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_last_page" />
    </LinearLayout>
</LinearLayout>